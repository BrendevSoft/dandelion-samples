<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
   version="3.0">

   <!-- Dandelion servlet definition and mapping -->
   <servlet>
      <servlet-name>dandelionServlet</servlet-name>
      <servlet-class>com.github.dandelion.core.asset.web.AssetServlet</servlet-class>
   </servlet>
   <servlet-mapping>
      <servlet-name>dandelionServlet</servlet-name>
      <url-pattern>/dandelion-assets/*</url-pattern>
   </servlet-mapping>

   <servlet>
      <servlet-name>scopeServlet</servlet-name>
      <servlet-class>com.github.dandelion.sample.web.ScopeServlet</servlet-class>
   </servlet>
   <servlet-mapping>
      <servlet-name>scopeServlet</servlet-name>
      <url-pattern>/scope</url-pattern>
   </servlet-mapping>


   <!-- Dandelion filter definition and mapping -->
   <filter>
      <filter-name>dandelion</filter-name>
      <filter-class>com.github.dandelion.core.asset.web.AssetFilter</filter-class>
   </filter>
   <filter-mapping>
      <filter-name>dandelion</filter-name>
      <url-pattern>/*</url-pattern>
   </filter-mapping>
</web-app>